@model Teatar.Models.Reservation
@{
    ViewBag.Title = "Create";
    var indeks = ViewBag.id;
}
<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4> Reservation </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-2"> Choose projection </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TimeTableId , new { htmlAttributes = new { @class = "form-control", @Value = @indeks } })
                @Html.ValidationMessageFor(model => model.TimeTableId, "", new { @class = "text-danger" })
            </div>

        </div>
        <div class="form-group">
            <div class="col-md-2"> Num of tickets </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumOfTickets, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumOfTickets, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to the list", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
