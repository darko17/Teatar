@model Teatar.Models.Hall
@{
    ViewBag.Title = "Details";
}
<h2>Details</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Hall's Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Number of seats
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NumOfSeats)
        </dd>
        <dt>
            Number of available seats
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NumOfAvailableSeats)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.HallId }) |
    @Html.ActionLink("Back to the list", "Index")
</p>
