@model IEnumerable<Teatar.Models.Hall>
@{
    ViewBag.Title = "Index";
}
<h2>All hall's</h2>
<p>
    @Html.ActionLink("Create new hall", "Create")
</p>
<table class="table">
    <tr>
        <th> Hall's name </th>
        <th>  Num of seats </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfSeats)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.HallId }) |
                @Html.ActionLink("Details", "Details", new { id = item.HallId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.HallId })
            </td>
        </tr>
    }
</table>
